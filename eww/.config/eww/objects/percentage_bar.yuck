(defvar percentage_bar_icon "ó°•¾")
(defvar percentage_bar_value 50)

(defwidget percentage_bar [] (eventbox
    :onclick "${EWW_CONFIG_DIR}/scripts/percentage_bar close"
    (box :class "percentage_bar"
        (overlay
            (progress
                :class "scale"
                :value percentage_bar_value
                :valign "CENTER"
                :halign "CENTER"
                :orientation "v"
                :flipped true
            )
            (label 
                :text percentage_bar_icon 
                :valign "END" 
                :halign "CENTER"
                :class "icon"
            )
        )
    )
))
