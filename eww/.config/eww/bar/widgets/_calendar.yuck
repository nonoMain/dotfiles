(defwidget cal []
	(box :class "cal-box" :orientation "v"
		(calendar :class "cal" :day calendar_day :month calendar_month :year calendar_year)
	)
)

(defwindow calendar
	:monitor 0
	:geometry (geometry :x "5px"
						:y "5px"
						:anchor "top right"
						:width "270px"
						:height "60px")
	:focusable false
	:exclusive true
	(cal))
