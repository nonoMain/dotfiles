{
    "layer": "top",
    "position": "top",
    "height": 32,
    // Choose the order of the modules
    "modules-left": [
		"wlr/workspaces",
		"custom/recorder",
		"custom/audiorec"
	],
    "modules-center": ["hyprland/window"],
    "modules-right": [
		"tray",
        "idle_inhibitor",
        "battery",
		"network",
        "pulseaudio",
        "clock"
	],
    "hyprland/window": {
            "format": "{}"
    },
    "wlr/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "default": "ÔÑë‚ÇÄ",
            "1": "ÔÑë‚ÇÅ",
            "2": "ÔÑë‚ÇÇ",
            "3": "ÔÑë‚ÇÉ",
            "4": "ÔÑë‚ÇÑ",
            "5": "ÔÑë‚ÇÖ",
            "6": "ÔÑë‚ÇÜ",
            "7": "ÔÑë‚Çá",
            "8": "ÔÑë‚Çà",
            "9": "ÔÑë‚Çâ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
        },
     "on-scroll-up": "hyprctl dispatch workspace e+1",
     "on-scroll-down": "hyprctl dispatch workspace e-1",
      "on-click": "activate",
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 6
    },
    "clock": {
        "interval": 1,
        "locale": "C", 
        "format": "{:%d/%m/%Y %H:%M:%S}",
        "format-alt": "{:%a,%b %d %d/%m/%Y %H:%M}"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ÔÉß {capacity}%",
        "format-plugged": "ÔÉß {capacity}%",
        "format-alt": "{icon} {time}",
        "format-good": "{icon} {capacity}%", // An empty format will hide the module
        "format-full": "{icon}",
        "format-icons": ["Ôïª", "Ôïº", "Ôïæ", "ÔñÄ",]

        // "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´ ({signalStrength}%)",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "‚úà Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid}: {ipaddr}"
    },
    "pulseaudio": {
      "scroll-step": 2, // %, can be a float
      "format": "{icon} {volume}% {format_source}",
      "format-bluetooth": "{icon}Ôäî {volume}% {format_source}",
      "format-bluetooth-muted": "Ôë¶ {format_source}",
      "format-muted": "Ôë¶  {format_source}",
      "format-source": "ÔÑ∞ {volume}%",
      "format-source-muted": "ÔÑ±",
      "format-icons": {
        "headphone": "ÔÄ•",
        "hands-free": "Ôñê",
        "headset": "üéß",
        "phone": "ÔÇï",
        "portable": "ÔÇï",
        "car": "ÔÜπ",
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
      },
      "on-click": "pavucontrol"
    },

    "custom/updates": {
        "exec": "(paru -Qua) | wc -l",
        "interval": 7200,
        "format": "Ôõô {}"
    },
    "custom/recorder": {
        "format": "ÔÄΩ Rec",
        "format-disabled": "ÔÄΩ Off-air", //An empty format will hide the module.
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"recording\"}'",
        "exec-if": "pgrep wf-recorder",
    },

    "custom/audiorec": {
        "format": "‚ô¨ Rec",
        "format-disabled": "‚ô¨ Off-air", //An empty format will hide the module.
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"audio recording\"}'",
        "exec-if": "pgrep ffmpeg",
    },

}
