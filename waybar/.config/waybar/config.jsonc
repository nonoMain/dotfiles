	"custom/active-prog-name": {
		"format": "{} |",
		"interval": 1,
		"exec": "~/.config/waybar/scripts/active_program_name.sh",
		"tooltip": false
	},

	"clock": {
		"interval": 1,
		"locale": "C", 
		"format": "{:%H:%M:%S ~ %A, %d/%m}",
	},
	// right modules
	"tray": {
		"icon-size": 20,
		"spacing": 6
	},
