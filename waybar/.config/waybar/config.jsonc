	"position": "top",
	"height": 32,
	"modules-left": [
		"wlr/workspaces"
	],
	"modules-center": [
		"custom/active-prog-name",
		"clock"
	],
	"modules-right": [
		"tray",
		"custom/space",
		"custom/updates",
		//"idle_inhibitor",
		"battery",
		"network",
		"pulseaudio"
	],
	"custom/space": {
